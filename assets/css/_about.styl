#about
  .wrap
    margin-top: 0

  #details
    center(900px)
    list-style: none

    +below(420px)
      display: none

    li
      column(1/3)
      text-align: center
      height: 300px

      img
        max-width: 150px

    +below(690px)
      li:last-of-type, li:nth-of-type(2)
        column(1/2)
        margin: 0
        text-align: center

      li:first-of-type
        column(1)
        text-align: center

    #free, #tracking, #decentralized
      position: relative
      top: 50%
      transform: translate(0, -50%)
